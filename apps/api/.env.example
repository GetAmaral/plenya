# Server Configuration
PORT=3001
ENVIRONMENT=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=plenya_user
DB_PASSWORD=plenya_dev_password
DB_NAME=plenya_db
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET=your_jwt_secret_256_bits_minimum_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Security
ENCRYPTION_KEY=your_encryption_key_256_bits_here

# SNCR Configuration (Sistema Nacional de Controle de Receitas)
SNCR_ENABLED=true
SNCR_PRODUCTION_MODE=false
SNCR_API_URL=https://sncr.anvisa.gov.br/api/v1
SNCR_API_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Claude AI Configuration (for OCR and PDF interpretation)
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI Configuration (for RAG semantic search embeddings)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_API_URL=https://api.openai.com/v1
